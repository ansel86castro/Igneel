<Window x:Class="ForgeEditor.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ShowInTaskbar="False"       
        WindowStyle="None" ResizeMode="NoResize" Topmost="True"
        Height="70">
    <StackPanel>
        <ProgressBar Name="Bar" HorizontalAlignment="Stretch" Height="30" Margin="10" VerticalAlignment="Top"
                     IsIndeterminate="True"/>
        <TextBlock Name="Message">Loading</TextBlock>
    </StackPanel>
</Window>
